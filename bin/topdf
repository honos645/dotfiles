#!/bin/bash

function topdf () {
  FLAG=""
  OPS=""

  for I in "${@}"; do
    if [ -e $I ]; then
      TARGET=$I
    elif [ $I == "-n" ]; then
      FLAG="${FLAG}n"
    elif [ $I == "-t" ]; then
      FLAG="${FLAG}t"
    elif [ $I == "-d" ]; then
      FLAG="${FLAG}d"
    fi
  done

  while getopts ntd: OPT; do
    case ${OPT} in
      n ) readonly local FLAG_N="1" VALUE="${OPTARG}" ;;
      t ) readonly local FLAG_T="1" VALUE="${OPTARG}" ;;
      d ) readonly local FLAG_D="1" VALUE="${OPTARG}" ;;
    esac
  done

  if [[ -v TARGET ]]; then
    FILENAME=${TARGET##*/}
    FNAME=${TARGET%.*}
    DIRNAME=${TARGET%/*}

    if [[ ${FLAG} =~ .*n.* ]]; then
      cat ${TARGET} | iconv -f UTF-8 -t EUC-JP > .temp
    else
      cat -n ${TARGET} | iconv -f UTF-8 -t EUC-JP > .temp
    fi

    if [[ ${FLAG} =~ .*t.* ]]; then
      OPS="${OPS} -nh "
    else
      OPS="${OPS} -head ${FILENAME}"
    fi

    e2ps -p ${OPS} .temp > ${FNAME}.ps
    ps2pdf ${FNAME}.ps
    rm -f ${FNAME}.ps .temp
  else
    echo "convert error"
  fi
}
